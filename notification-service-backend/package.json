{
  "name": "notification-service",
  "version": "1.0.0",
  "description": "Notification & Email Microservice for Bhutan Auction Platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --setupFiles ./tests/setup.js",
    "test:watch": "jest --watch --setupFiles ./tests/setup.js",
    "test:coverage": "jest --coverage --setupFiles ./tests/setup.js",
    "test:unit": "jest tests/unit --setupFiles ./tests/setup.js",
    "test:integration": "jest tests/integration --setupFiles ./tests/setup.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "node-fetch": "^3.3.2",
    "resend": "^2.0.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}